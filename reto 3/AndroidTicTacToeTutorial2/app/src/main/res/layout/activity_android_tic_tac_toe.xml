<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/board_bg_nocrop">

    <!-- Tablero de juego con BoardView (reemplaza botones) -->
    <co.edu.unal.tictactoe.BoardView
        android:id="@+id/board"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="5dp" />

    <!-- Texto de información -->
    <TextView
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Empieza el juego"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="casual"/>

    <!-- Marcador -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/human_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="Human: 0"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="casual"/>

        <TextView
            android:id="@+id/ties_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ties: 0"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="casual"/>

        <TextView
            android:id="@+id/computer_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="Android: 0"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="casual"/>
    </RelativeLayout>

    <!-- Botón New Game -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:drawable/btn_default_small"
            android:text="New Game"
            android:textColor="@color/white"
            android:fontFamily="casual"/>



    </RelativeLayout>

</LinearLayout>
