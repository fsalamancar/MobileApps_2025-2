<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la empresa"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL página web"
            android:inputType="textUri"/>

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/etProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Productos y servicios"
            android:inputType="textMultiLine"
            android:lines="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clasificación:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupClasificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbConsultoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultoría"/>

            <RadioButton
                android:id="@+id/rbDesarrollo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desarrollo a la medida"/>

            <RadioButton
                android:id="@+id/rbFabrica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fábrica de software"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
